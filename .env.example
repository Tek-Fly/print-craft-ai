# PrintCraft AI Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Replicate API Configuration
REPLICATE_API_TOKEN=r8_your_replicate_api_token_here

# Firebase Configuration (for local development)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Custom Cat Payment Integration
CUSTOM_CAT_API_KEY=cc_your_api_key_here
CUSTOM_CAT_WEBHOOK_SECRET=whsec_your_webhook_secret
CUSTOM_CAT_PRODUCT_ID=prod_your_product_id

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCLOUD_PROJECT=your-gcp-project-id

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
API_BASE_URL=http://localhost:8000

# Production URLs (override in production)
PRODUCTION_API_URL=https://api.printcraft.ai
CDN_URL=https://cdn.printcraft.ai

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
ENABLE_PERFORMANCE_MONITORING=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Database (if using local DB for development)
DATABASE_URL=postgresql://user:password@localhost:5432/printcraft_dev

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379

# Email Service (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@printcraft.ai
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@printcraft.ai

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOGFLARE_API_KEY=your_logflare_key
LOGFLARE_SOURCE_ID=your_source_id

# Testing
TEST_USER_EMAIL=test@printcraft.ai
TEST_USER_PASSWORD=test_password_123

# Security
JWT_SECRET=your-very-long-random-jwt-secret-minimum-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-minimum-32-chars

# Third-party Services
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token
INTERCOM_APP_ID=your_intercom_app_id

# Image Processing
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_FORMATS=png,jpg,jpeg,webp
IMAGE_QUALITY_COMPRESSION=85

# Webhook URLs (for local development)
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io
PAYMENT_WEBHOOK_ENDPOINT=/webhooks/payment
GENERATION_WEBHOOK_ENDPOINT=/webhooks/generation